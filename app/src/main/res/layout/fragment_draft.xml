<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uta.groceryplanner.DraftFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/draftRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/createGroupFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="80dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorTitle2"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_group_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/groupFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="80dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorTitle2"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_group_add_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/personalFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="24dp"
        android:visibility="invisible"
        app:elevation="6dp"
        app:backgroundTint="@color/colorTitle2"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_person_add_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mainFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:elevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:backgroundTint="@color/colorTitle"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_add_white_24dp" />
</RelativeLayout>
